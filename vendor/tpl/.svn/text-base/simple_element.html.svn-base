<div id='{$id}Field' class='field'><label class='fieldLabel' for='{$id}'>{$title}{if="$required==true"}*{else}(Optional){/if}:</label>
<label class='fieldDesc' >{$description}</label>
{if="$enumeration!=null"}<select class="inpfield" name='{$id}' onblur="setValueOnHTML('{$id}','select');">
{loop="enumeration"}
<option value="{$value}"  {if="$value ==$xmlValue"}selected="true"{/if} >{$value}</option>
{/loop}
</select>
{else}
 {if="$base=='string' || $base=='xs:string' ||$base=='int' || $base=='xs:integer' || $base=='integer'"}
<input base="text" name="{$id}" class="inpfield"  value="{$xmlValue}" onblur="setValueOnHTML('{$id}','text');"/>
 {elseif="$base=='boolean'"}
<input type="checkbox" name="{$id}" value="{$name}" checked="{$value}" onblur="setValueOnHTML('{$id}','checkbox');"/>
 {else}
<input type="text" name="{$id}" class="inpfield"  value="{$xmlValue}"/>
 {/if}
{/if}
</div>