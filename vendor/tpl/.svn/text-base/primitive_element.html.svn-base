<div id='{$id}Field' class='field'><label class='fieldLabel' for='{$id}'>{$title}{if="$required==true"}*{else}(Optional){/if}</label>
<label class='fieldDesc' >{$description}</label>
{if="$type=='string' || $type=='int' || $type=='integer'"}
<input type="text" name="{$id}" class="inpfield"  value="{$value}" onblur="setValueOnHTML('{$id}','text');"/>
{elseif="$type=='boolean'"}
<input type="checkbox" name="{$id}" value="{$name}" checked="{$value}" onblur="setValueOnHTML('{$id}','checkbox');"/>
{else}
<input type="text" name="{$id}" class="inpfield"  value="{$value}" onblur="setValueOnHTML('{$id}','text');"/>
{/if}
</div>